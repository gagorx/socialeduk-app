<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.searchfriends.SearchFriendsActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchFriends_listUsers_recicleView"
        android:layout_width="389dp"
        android:layout_height="576dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/searchFriends_inputSearch_editText"
        android:layout_width="243dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Pesquise um amigo..."
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchFriends_home_button" />

    <ImageButton
        android:id="@+id/searchFriends_back_button"
        android:layout_width="62dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="84dp"
        android:tint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/searchFriends_home_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrowback" />

    <ImageButton
        android:id="@+id/searchFriends_search_button"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_search_24"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/searchFriends_inputSearch_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchFriends_inputSearch_editText" />

    <ImageButton
        android:id="@+id/searchFriends_home_button"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="172dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_iconunieduk_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>