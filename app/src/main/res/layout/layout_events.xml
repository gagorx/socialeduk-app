<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="7dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="114dp">

                <TextView
                    android:id="@+id/groups_name"
                    android:layout_width="288dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="4dp"
                    android:text="nomeEvento"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/groups_description"
                    android:layout_width="288dp"
                    android:layout_height="63dp"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="36dp"
                    android:text="descricaoEvento"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/events_circle"
                    android:layout_width="88dp"
                    android:layout_height="75dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@android:drawable/presence_invisible" />

                <TextView
                    android:id="@+id/events_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="4dp"
                    android:text="horario"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/events_circle" />

                <TextView
                    android:id="@+id/events_month"
                    android:layout_width="39dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="24dp"
                    android:text="JULY"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="@+id/events_circle"
                    app:layout_constraintEnd_toEndOf="@+id/events_circle"
                    app:layout_constraintTop_toTopOf="@+id/events_circle"
                    app:layout_constraintVertical_bias="0.62" />

                <TextView
                    android:id="@+id/events_day"
                    android:layout_width="28dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="32dp"
                    android:text="22"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/events_circle"
                    app:layout_constraintEnd_toEndOf="@+id/events_circle"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/events_circle"
                    app:layout_constraintVertical_bias="0.303" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>